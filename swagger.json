{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple API",
    "version": "1.0.0",
    "description": "A simple API to demonstrate Swagger UI customization"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/example": {
      "get": {
        "summary": "Example endpoint",
        "description": "Returns a simple example response",
        "responses": {
          "200": {
            "description": "A successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, world!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}